<Window x:Class="MyDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btCustomers" Content="Покупатели" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="73,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="46" Width="107" Click="btCustomers_Click" FontSize="18">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="btProducts" Content="Товары" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="339,112,0,0" VerticalAlignment="Top" Height="39" Width="74" FontSize="18" Click="btProducts_Click"/>

    </Grid>
</Window>
