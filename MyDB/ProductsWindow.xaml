<Window x:Class="MyDB.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDB"
        mc:Ignorable="d"
        Title="ProductsWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgProducts" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,10,100"/>
        <Button x:Name="btAdd" Content="Добавить" HorizontalAlignment="Left" Margin="10,372,0,0" VerticalAlignment="Top" Click="btAdd_Click" FontSize="18" Height="32" Width="90"/>
        <Button x:Name="btDelete" Content="Удалить" HorizontalAlignment="Left" Margin="155,372,0,0" VerticalAlignment="Top" Click="btDelete_Click" FontSize="18" Height="32" Width="90"/>
        <Button x:Name="btUpdate" Content="Изменить" HorizontalAlignment="Left" Margin="305,372,0,0" VerticalAlignment="Top" Click="btUpdate_Click" FontSize="18" Height="32" Width="90"/>
        <Button x:Name="btClose" Content="Закрыть" HorizontalAlignment="Left" Margin="624,372,0,0" VerticalAlignment="Top" Click="btClose_Click" FontSize="18" Height="32" Width="90"/>

    </Grid>
</Window>
